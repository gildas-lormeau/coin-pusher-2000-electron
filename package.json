{
  "name": "coin-pusher-2000-electron",
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-native": "cd rapier3d-electron && npm run build",
    "build-native-f64": "cd rapier3d-f64-electron && npm run build",
    "build": "npm run build-native && npm run build-native-f64",
    "package": "electron-builder"
  },
  "type": "module",
  "keywords": [],
  "author": "Gildas Lormeau",
  "license": "AGPL",
  "description": "Coin Pusher game using Electron with native Rapier physics",
  "dependencies": {
    "three": "^0.178.0"
  },
  "devDependencies": {
    "@neon-rs/cli": "0.1.82",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "neon-cli": "^0.10.1"
  },
  "build": {
    "appId": "com.coinpusher2000.app",
    "productName": "Coin Pusher 2000",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!*.md",
      "!*.gitignore"
    ],
    "extraResources": [
      {
        "from": "game",
        "to": "game"
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
